{
    "cron": "* * * * *",
    "notify": [
        "john.doe@example.com"
    ],
    "monitors": [
        {
            "name": "GET all",
            "endpoint": "http://localhost:8081/beer",
            "method": "GET",
            "expect": {
                "status": 200
            }
        },
        {
            "name": "GET one",
            "endpoint": "http://localhost:8081/beer/1",
            "method": "GET",
            "cron": "*/2 * * * *",
            "expect": {
                "status": 200,
                "body": "{ \"data\": { name: \"Augustiner\" } }",
                "headers": {
                    "X-hello-world": "Hello World!"
                }
            }
        },
        {
            "name": "GET one non-existing",
            "endpoint": "http://localhost:8081/beer/-1",
            "method": "GET",
            "expect": {
                "status": 404
            }
        },
        {
            "name": "GET one non-existing | fails",
            "endpoint": "http://localhost:8081/beer/-1",
            "method": "GET",
            "expect": {
                "status": 200
            }
        },
        {
            "name": "POST one",
            "endpoint": "http://localhost:8081/beer",
